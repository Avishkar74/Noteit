{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "jest": true,
    "webextensions": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "no-var": "error",
    "prefer-const": "warn"
  }
}
